#include<stdio.h>

int ord[100],a[100],b[100],n,i,j;

void swap(int *a,int *b){
  int tmp;
  tmp=*a;
  *a=*b;
  *b=tmp;
}

int main(){
  scanf("%d",&n);
  for(i=0;i<n;i++){
    scanf("%d%d%d",&ord[i],&a[i],&b[i]);
  }
  for(i=0;i<n;i++){
    for(j=0;j<n-1;j++){
      if(a[j]<a[j+1]){
        swap(&a[j],&a[j+1]);
        swap(&b[j],&b[j+1]);
        swap(&ord[j],&ord[j+1]);
      }
      else if(a[j]==a[j+1]){
        if(b[j]<b[j+1]){
          swap(&b[j],&b[j+1]);
          swap(&a[j],&a[j+1]);
          swap(&ord[j],&ord[j+1]);
        }
      }
    }
  }
  for(i=0;i<n;i++){
    printf("%d %d %d\n",ord[i],a[i],b[i]);
  }
  return 0;
}
