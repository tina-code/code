#include<stdio.h>
#include<string.h>

int main(){
  int len,i,j,m,flag=0;
  char num[100000];
  scanf("%s",num);
  len=strlen(num);
  m=len/2;
  if(len%2==1){
    for(i=len/2-1;i>=0;i--){
      if(num[i]!=num[m+1]){
        flag=1;
        break;
      }
      else {
        m++;
      }
    }
  }
  else {
    for(i=len/2-1;i>=0;i--){
      if(num[i]!=num[m]){
        flag=1;
        break;
      }
      else {
        m++;
      }
    }
  }
  if(flag==1){
    printf("NO\n");
  }
  if(flag==0){
    printf("YES\n");
  }
  return 0;
}
